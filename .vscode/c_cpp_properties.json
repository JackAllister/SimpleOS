{
    "env": {
      "myDefaultIncludePath": [
        "${workspaceFolder}",
        "${workspaceFolder}/bootloader/**",
        "${workspaceFolder}/libraries/**",
        "/usr/include/efi",
        "/usr/include/efi/x86_64"
      ],
      "myCompilerPath": "/usr/bin/gcc"
    },
    "configurations": [
      {
        "name": "EFI",
        "intelliSenseMode": "clang-x64",
        "includePath": ["${myDefaultIncludePath}"],
        "defines": ["FOO", "BAR=100"],
        "compilerPath": "${myCompilerPath}",
        "cStandard": "c11",
        "cppStandard": "c++17",
        "browse": {
          "path": ["${workspaceFolder}"],
          "limitSymbolsToIncludedHeaders": true,
          "databaseFilename": ""
        }
      }
    ],
    "version": 4
  }
  